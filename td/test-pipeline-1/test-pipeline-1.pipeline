grep-stuff. egrep "the" [% datasource.path %] > [% grep-stuff.grep.txt %]
grep-stuff.mem 500
grep-stuff.queue normal

wordcount. wc -l [% grep-stuff.grep.txt %] > [% wordcount.wc.txt %]
wordcount.mem 1000

check-output. perl -MPath::Tiny -e '$str = "hi"; path("hi.txt")->spew($str);'
check-output.output hi.txt hi.1.txt

#new-step cat [% check-output.output2 %] [% datasource.gender %]
sum-words.once perl -MList::AllUtils=sum -e 'print sum(@ARGV);' [% jobs.wordcount.wc.txt  %] > [% sum-words.count.txt %]

echo-sum-words.once echo [% sum-words.count.txt %] > [% echo-sum-words.sumwords.txt %]

cat-check-output. cat [% jobs.check-output.output1 %] > [% cat-check-output.cat.txt %] 

apply-software. perl [% software.app.pl %] [% datasource.path %] > [% apply-software.out %]

check-datasource.once wc -l [% jobs.datasource.path %]
